<div class ="center">
    <h2> Your Sales History </h2>
</div>

<table class = "table table-striped table-bordered table-hover">
 <tr>
  <th> Image </th>
  <th> Item </th>
  <th> Description </th>
  <th> Customer </th>
  <th> Date Sold </th>
  </tr>
  
 <% @orders.each do |order| %> 
  <tr>
   <td div class = "center"><%= image_tag order.listing.image.url(:thumb) %></td>
   <td div class = "center"><%= order.listing.name %></td>
   <td div class = "center"><%= number_to_currency(order.listing.price) %></td>
   <td div class = "center"><%= order.buyer.name%></td>
     <td div class = "center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
   
 </tr>
 <% end %>
 </table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link",  data: { turbolinks: false } %>
<% end %>
